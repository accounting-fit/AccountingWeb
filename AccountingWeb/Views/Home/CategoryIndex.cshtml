
@{
    ViewData["Title"] = "CategoryIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        font-family: Inter;
        font-style: normal;
    }

    .btn-filter {
        padding: 3px !important;
        font-size: .90rem !important;
        width: 4.90em !important;
    }

    .w-80 {
        width: 80% !important;
    }

    #category thead {
        background: #F4F2FF;
    }

        #category thead th {
            font-family: Inter;
            font-style: normal;
            font-weight: 600;
            font-size: 12px;
            line-height: 15px;
            /* identical to box height */
            letter-spacing: 0.05em;
            text-transform: uppercase;
            /* Fonts/Primary Variant */
            color: #6E6893;
        }

    .table-data-font {
        font-family: Inter;
        font-style: normal;
        font-weight: 500;
        font-size: 14px;
        line-height: 17px;
        /* identical to box height */
        /* Fonts/Primary */
        color: #25213B;
    }

    .table-data-font-sm {
        font-family: Inter;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        line-height: 17px;
        /* identical to box height */
        letter-spacing: 0.05em;
        /* Fonts/Primary Variant */
        color: #6E6893;
    }

    .badge-success {
        background-color: #CDFFCD;
        color: #007F00 !important;
    }

    .badge-default {
        background: #E6E6F2;
        border-radius: 30px;
    }

    .badge-danger {
        background: #FFE0E0;
        color: #D30000 !important;
    }

    .badge-warning {
        background: #FFECCC;
        color: #965E00 !important;
    }

    #category tfoot {
        background: #F4F2FF;
        transform: matrix(1, 0, 0, 1, 0, 0);
        height: 45px;
        font-family: Inter;
        font-style: normal;
        font-weight: 600;
        font-size: 12px;
        line-height: 15px;
        /* identical to box height */

        letter-spacing: 0.05em;
        /* Fonts/Primary Variant */

        color: #6E6893;
    }

        #category tfoot select {
            background-color: transparent;
            border: none;
        }
</style>
<div class="card" ng-controller="CategoryController" ng-init="OnInitIndexTable()">
    <div class="card-body pt-2 p-0 m-0">
        <div class="row">
            <div class="col-1 pl-3 ">
                <button class="btn border bg-gradient-light btn-light btn-xs btn-block btn-filter p-1 m-0" type="button"><i class="fas fa-filter"></i>&nbsp; Filter</button>
            </div>
            <div class="col-5 pl-3 ">
                <div class="input-group mb-3">
                    <div class="input-group-prepend border-0">
                        <span class="input-group-text border-0 bg-gray-200" id="basic-addon1"><i class="fas fa-search"></i></span>
                    </div>
                    <input type="text" class=" w-80 form-control-sm bg-gray-200 border-0" placeholder="Search by name" aria-label="Username" aria-describedby="basic-addon1">
                </div>
            </div>
            <div class="col-6 pr-3 pl-3 text-right">
                <a href="/Home/CategoryCreate" class="text-white btn bg-gradient-info btn-xs btn-filter mr-2" type="button"><i class="fas fa-save"></i>&nbsp;Add</a>
                <button class="text-white btn bg-gradient-success btn-xs btn-filter mr-2" type="button"><i class="fas fa-edit"></i>&nbsp;Edit</button><button class="text-white btn bg-gradient-danger btn-xs btn-filter mr-2" type="button"><i class="fas fa-trash"></i>&nbsp;Delete</button>
                <button title="Export To Excel" ng-click="ExportToExcel()" class="text-white btn bg-gradient-primary btn-xs btn-filter" type="button"><i class="fas fa-file-excel"></i>&nbsp;Export</button>
            </div>
        </div>
        <div class="table-responsive">
            <table id="category" class="table table-sm">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" />
                        </th>
                        <th>Ma Hang</th>
                        <th>Ten Hang</th>
                        <th>Tin Chat VTH</th>
                        <th>DVT</th>
                        <th>So luong ton</th>
                        <th>Gia tri ton</th>
                        <th>
                            @*<button title="View More" type="button" class="btn btn-sm bg-transparent border-0"><i class="fas fa-ellipsis-v"></i></button>*@
                            Trinh tang
                        </th>
                    </tr>
                </thead>
                <tbody style="background-color:white;">
                    <tr ng-repeat="item in IndexTable">
                        <td><input type="checkbox" /></td>
                        <td>
                            <span class="table-data-font">{{item.materialGoodsCode}}</span><br />
                            @*<span class="table-data-font-sm">example@email.com</span>*@
                        </td>
                        <td>
                            <span class="table-data-font">{{item.materialGoodsName}}</span><br />

                            @*<span class="table-data-font badge badge-default text-primary"> Active</span><br />
                                <span class="table-data-font-sm">Last login: 14/APR/2020</span>*@

                        </td>
                        <td>
                            @*<span class="table-data-font badge badge-pill badge-success text-primary"> Paid</span><br />
                                <span class="table-data-font-sm">Paid on 15/APR/2020</span>*@
                            <span class="table-data-font">Tin Chat VTH</span><br />
                        </td>
                        <td>
                            @*<span class="table-data-font">$200</span><br />
                                <span class="table-data-font-sm">USD</span>*@
                            <span class="table-data-font">{{item.unit}}</span><br />
                        </td>
                        <td>
                            @*<span class="table-data-font">Col1</span>*@
                            <span class="table-data-font">{{item.minimumStock}}</span>

                        </td>
                        <td>
                            <span class="table-data-font">Trinh tang</span>
                        </td>
                        <td style="padding-top: 1rem;" class="">
                            <span class="table-data-font">Gia tri ton</span>

                            @*<span class="table-data-font-sm">View More</span>
                                <button title="View More" type="button" class="btn btn-sm bg-transparent border-0"><i class="fas fa-ellipsis-v"></i></button>*@
                        </td>
                    </tr>
                    @*<tr>
                            <td>
                                <input type="checkbox" />
                            </td>
                            <td>
                                <span class="table-data-font">Justin Septimus</span><br />
                                <span class="table-data-font-sm">example@email.com</span>
                            </td>
                            <td>
                                <span class="table-data-font badge badge-default text-primary"> Active</span><br />
                                <span class="table-data-font-sm">Last login: 14/APR/2020</span>

                            </td>
                            <td>
                                <span class="table-data-font badge badge-pill badge-success text-primary"> Paid</span><br />
                                <span class="table-data-font-sm">Paid on 15/APR/2020</span>

                            </td>
                            <td>
                                <span class="table-data-font">$200</span><br />
                                <span class="table-data-font-sm">USD</span>
                            </td>
                            <td>
                                <span class="table-data-font">Col1</span>
                            </td>
                            <td>
                                <span class="table-data-font">Col2</span>
                            </td>
                            <td style="padding-top: 1rem;" class="text-right">
                                <span class="table-data-font-sm">View More</span>
                                <button title="View More" type="button" class="btn btn-sm bg-transparent border-0"><i class="fas fa-ellipsis-v"></i></button>
                            </td>
                        </tr>*@

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" class="text-right" style=" padding-top: 1rem;">
                            <span>Rows per page:</span>
                            <select>
                                <option>10</option>
                                <option>25</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                        </td>
                        <td class="text-right" style=" padding-top: 1rem;">
                            1-10 of 276
                        </td>
                        <td class="text-right">
                            <button type="button" class="btn btn-flat btn-xs bg-transparent">
                                <i class="fas fa-angle-left mr-3"></i>
                            </button>
                            <button type="button" class="btn btn-flat btn-xs bg-transparent">
                                <i class="fas fa-angle-right"></i>
                            </button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>



    </div>
</div>
@section Scripts{
    <script src="~/js/angularjsservices/categoryservice.js"></script>
    <script src="~/js/angularjsservices/globalservices.js"></script>


} 